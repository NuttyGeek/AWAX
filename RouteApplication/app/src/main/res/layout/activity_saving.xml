<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SavingActivity">

<!--     page content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/page_content"
        android:weightSum="2"
        android:paddingBottom="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- map layout  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/mapLayout"
            android:layout_height="match_parent">
        <!-- map view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.mapbox.mapboxsdk.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        mapbox:mapbox_cameraTargetLat="40.73581"
                        mapbox:mapbox_cameraTargetLng="-73.99155"
                        mapbox:mapbox_cameraZoom="11"
                        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10" >

                    </com.mapbox.mapboxsdk.maps.MapView>
                    <ProgressBar
                        android:id="@+id/progress_bar_speechto_text"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_width="50dp"/>

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:visibility="gone"
                        app:srcCompat="@drawable/menu" />
                </FrameLayout>

            </LinearLayout>
            <!--menu -->
            <!-- color list -->
            <LinearLayout
                android:layout_width="40dp"
                android:id="@+id/menu"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <!-- toggle button for menu -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_volume_up_24px"/>
                <!-- color buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/color_buttons"
                    android:layout_height="match_parent">

                    <ListView
                        android:layout_width="match_parent"
                        android:id="@+id/color_list"
                        android:layout_height="match_parent">

                    </ListView>

                </LinearLayout>

            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Video"
                android:textOn="Word Cloud"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:text="Word" />
<!--            <ToggleButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Word Cloud"/>-->

        </RelativeLayout>

        <!-- video player -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/videoPlayerLayout"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/videoFrame"
                android:background="@color/black">

                <!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:id="@+id/relative_parent"-->
                <!--android:background="#000000">-->
                <!--<VideoView-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:focusable="false"-->
                <!--android:focusableInTouchMode="false"-->
                <!--android:id="@+id/videoView" />-->
                <!--</RelativeLayout>-->
                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ToggleButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/toggle_selector"
                    android:padding="@dimen/margin_36"
                    android:textOff=" "
                    android:textOn=" "
                    app:layout_constraintBottom_toTopOf="@+id/btnCancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <SeekBar
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/seekbar_video"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>

<!--         webview layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/webViewLayout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <WebView
                android:layout_width="match_parent"
                android:id="@+id/webView"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- button layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:id="@+id/buttons_layout"
            android:weightSum="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_bg_green"
                android:gravity="center"
                android:text="Upload"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/framesButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_bg_green"
                android:gravity="center"
                android:text="Frames Test"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/btnSpeechToText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_bg_green"
                android:gravity="center"
                android:text="Show Text"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

<!--  horizontal tabs-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:text="Video"
            android:id="@+id/videoTab"
            android:background="@color/white"
            android:layout_weight="1"
            android:onClick="tabClicked"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:text="Segment"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="tabClicked"
            android:id="@+id/segmentTab"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Semantics"
            android:background="@color/white"
            android:id="@+id/semanticsTab"
            android:onClick="tabClicked"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>